<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

   <!-- <me.relex.photodraweeview.PhotoDraweeView-->
    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@id/photo_picker_iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        fresco:actualImageScaleType="focusCrop"
        fresco:backgroundImage="@drawable/album_photo_bg"
        fresco:fadeDuration="300"
        fresco:failureImage="@mipmap/ic_broken_image_black"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/ic_photo_black"
        fresco:placeholderImageScaleType="centerCrop" />

    <ImageView
        android:id="@id/photo_picker_iv_select_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:clickable="true"
        android:padding="5dp"
        />

</LinearLayout>
